<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane prefWidth="800.0" prefHeight="510.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jabref.gui.secondFunctionality.SecondFuncDialogView" stylesheets="@SecondFuncDialog.css">
    <content>
        <VBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER_LEFT">
                <VBox alignment="CENTER_LEFT" spacing="2.0" styleClass="about-top" HBox.hgrow="NEVER">
                    <Label alignment="CENTER" contentDisplay="CENTER" styleClass="about-heading" text="${controller.viewModel.heading}" wrapText="true"/>
                    <HBox alignment="CENTER_LEFT">
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Insert two valid Google Scholar IDs" wrapText="true"/>
                        <TextArea fx:id="textAreaInput1" editable="true" prefHeight="10.0" prefWidth="200.0" styleClass="info-sections"/>
                        <TextArea fx:id="textAreaInput2" editable="true" prefHeight="10.0" prefWidth="200.0" styleClass="info-sections"/>
                    </HBox>
                </VBox>
            </HBox>
            <TextArea fx:id="textAreaReport" editable="false" prefHeight="300.0" prefWidth="200.0" styleClass="info-sections"/>
        </VBox>
    </content>
    <header>
    </header>
    <ButtonType fx:id="researchButton" text="Find similarities"/>
    <ButtonType fx:id="clearResearch" text="Clear Research"/>
    <ButtonType fx:id="copyReportButton" text="Copy Report" buttonData="LEFT"/>
    <ButtonType fx:constant="CLOSE"/>
</DialogPane>

